<Window x:Class="Solution_Opener.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Solution_Opener"
        mc:Ignorable="d"
        Title="💼 Solution Opener" 
        Height="700" 
        Width="1200"
        MinHeight="500"
        MinWidth="800"
        WindowStartupLocation="Manual"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        Background="{StaticResource BackgroundBrush}">
    
    <Window.InputBindings>
        <KeyBinding Key="F" Modifiers="Ctrl" Command="ApplicationCommands.Find" />
        <KeyBinding Key="N" Modifiers="Ctrl" Command="{Binding AddRepositoryCommand}" />
        <KeyBinding Key="F5" Command="{Binding RefreshCurrentRepositoryCommand}" />
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <ToolBar Grid.Row="0" Style="{StaticResource ModernToolBarStyle}">
            <Button Command="{Binding AddRepositoryCommand}" 
                    Style="{StaticResource ModernButtonStyle}"
                    ToolTip="Add Repository (Ctrl+N)">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="➕" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Add Repository" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            
            <Separator Margin="12,4"/>
            
            <Button Command="{Binding RefreshCurrentRepositoryCommand}" 
                    Style="{StaticResource SecondaryButtonStyle}"
                    IsEnabled="{Binding SelectedTab, Converter={StaticResource NotNullConverter}}"
                    ToolTip="Refresh Current Repository (F5)">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🔄" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Refresh" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </ToolBar>

        <!-- Search Bar -->
        <Border Grid.Row="1" 
                Background="White"
                BorderThickness="0,0,0,1"
                BorderBrush="{StaticResource BorderBrush}"
                Padding="20,12">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" 
                                ShadowDepth="2" 
                                Opacity="0.05" 
                                Color="Black"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" 
                        Background="{StaticResource SelectionBrush}"
                        CornerRadius="6"
                        Padding="8"
                        Margin="0,0,12,0">
                    <TextBlock Text="🔍" 
                              FontSize="16"
                              VerticalAlignment="Center"/>
                </Border>
                
                <Grid Grid.Column="1">
                    <TextBox x:Name="SearchTextBox" 
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             VerticalAlignment="Center"
                             Height="36"
                             Background="White"
                             Foreground="Black"
                             FontSize="14"
                             Padding="12,8"
                             BorderBrush="#E0E0E0"
                             BorderThickness="2"
                             VerticalContentAlignment="Center"
                             PreviewKeyDown="SearchTextBox_PreviewKeyDown">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    
                    <!-- Placeholder Text -->
                    <TextBlock IsHitTestVisible="False"
                              Text="Search solutions by name or path... (Ctrl+F)"
                              Foreground="#B2BEC3"
                              FontSize="14"
                              VerticalAlignment="Center"
                              Margin="14,0,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
                
                <Button Grid.Column="2" 
                        Content="✕ Clear" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding ClearSearchCommand}"
                        Margin="12,0,0,0"
                        Height="36"
                        IsEnabled="{Binding SearchText, Converter={StaticResource NotEmptyStringConverter}}"/>
            </Grid>
        </Border>

        <!-- Main Content - Tabs -->
        <TabControl Grid.Row="2" 
                    Style="{StaticResource ModernTabControlStyle}"
                    ItemsSource="{Binding RepositoryTabs}"
                    SelectedItem="{Binding SelectedTab}"
                    BorderThickness="0"
                    PreviewKeyDown="TabControl_PreviewKeyDown">
            
            <TabControl.ItemContainerStyle>
                <Style TargetType="TabItem" BasedOn="{StaticResource ModernTabItemStyle}">
                    <Setter Property="ContextMenu">
                        <Setter.Value>
                            <ContextMenu>
                                <MenuItem Header="🔄 Refresh Repository" 
                                         Command="{Binding DataContext.RefreshCurrentRepositoryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                         InputGestureText="F5"/>
                                <Separator/>
                                <MenuItem Header="🗑️ Remove Repository"
                                         Command="{Binding DataContext.RemoveRepositoryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                         CommandParameter="{Binding}"/>
                            </ContextMenu>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.ItemContainerStyle>
            
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Border Background="{StaticResource SelectionBrush}"
                                CornerRadius="4"
                                Padding="6,2"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center">
                            <TextBlock Text="📂" FontSize="12"/>
                        </Border>
                        <TextBlock Text="{Binding Name}" 
                                  FontSize="14" 
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>
            
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <Grid Background="White" Margin="0,0,0,0">
                        <!-- Loading Overlay -->
                        <Border Background="#DD000000" 
                                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                                Panel.ZIndex="1000"
                                CornerRadius="0"
                                Margin="0">
                            <Border Background="White"
                                    CornerRadius="16"
                                    Padding="48"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="30" 
                                                    ShadowDepth="8" 
                                                    Opacity="0.4" 
                                                    Color="#6C5CE7"/>
                                </Border.Effect>
                                <StackPanel>
                                    <Viewbox Width="64" Height="64" Margin="0,0,0,20">
                                        <Canvas Width="100" Height="100">
                                            <Ellipse Width="100" Height="100" Stroke="{StaticResource SelectionBrush}" StrokeThickness="8" Fill="Transparent"/>
                                            <Ellipse Width="100" Height="100" Stroke="{StaticResource PrimaryBrush}" StrokeThickness="8" 
                                                    Fill="Transparent" StrokeDashArray="60 40">
                                                <Ellipse.RenderTransform>
                                                    <RotateTransform x:Name="SpinnerRotate" CenterX="50" CenterY="50"/>
                                                </Ellipse.RenderTransform>
                                                <Ellipse.Triggers>
                                                    <EventTrigger RoutedEvent="Loaded">
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="SpinnerRotate"
                                                                               Storyboard.TargetProperty="Angle"
                                                                               From="0"
                                                                               To="360"
                                                                               Duration="0:0:1.5"
                                                                               RepeatBehavior="Forever"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                </Ellipse.Triggers>
                                            </Ellipse>
                                        </Canvas>
                                    </Viewbox>
                                    <TextBlock Text="Scanning Repository..." 
                                              FontSize="20" 
                                              FontWeight="SemiBold"
                                              Foreground="{StaticResource TextPrimaryBrush}"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding StatusText}" 
                                              FontSize="14"
                                              Foreground="{StaticResource TextSecondaryBrush}"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,24"/>
                                    <ProgressBar IsIndeterminate="True"
                                                Height="4"
                                                Foreground="{StaticResource PrimaryBrush}"
                                                Background="{StaticResource SelectionBrush}"
                                                BorderThickness="0"
                                                MinWidth="250"/>
                                </StackPanel>
                            </Border>
                        </Border>

                        <!-- Solutions List -->
                        <DataGrid ItemsSource="{Binding FilteredSolutions}"
                                  Margin="20"
                                  CanUserSortColumns="True"
                                  AutoGenerateColumns="False"
                                  CanUserResizeRows="False"
                                  SelectionMode="Single"
                                  SelectionUnit="FullRow"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  RowHeight="32"
                                  IsReadOnly="True">
                            
                            <DataGrid.Style>
                                <Style TargetType="DataGrid" BasedOn="{StaticResource ModernDataGridStyle}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding FilteredSolutions.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.Style>

                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow" BasedOn="{StaticResource ModernDataGridRowStyle}">
                                    <Setter Property="Cursor" Value="Hand"/>
                                </Style>
                            </DataGrid.RowStyle>
                            
                            <DataGrid.Effect>
                                <DropShadowEffect BlurRadius="20" 
                                                ShadowDepth="4" 
                                                Opacity="0.08" 
                                                Color="Black"/>
                            </DataGrid.Effect>

                            <DataGrid.InputBindings>
                                <MouseBinding Gesture="LeftDoubleClick" 
                                            Command="{Binding DataContext.OpenSolutionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}, Path=SelectedItem}"/>
                                <KeyBinding Key="Enter" 
                                          Command="{Binding DataContext.OpenSolutionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                          CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}, Path=SelectedItem}"/>
                            </DataGrid.InputBindings>

                            <DataGrid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="🚀 Open Solution" 
                                             Command="{Binding DataContext.OpenSolutionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                             CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                             FontWeight="SemiBold"/>
                                    <Separator/>
                                    <MenuItem Header="📁 Open in Explorer" 
                                             Command="{Binding DataContext.OpenInExplorerCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                             CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                    <MenuItem Header="📋 Copy Path" 
                                             Command="{Binding DataContext.CopyPathCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                             CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                    <Separator/>
                                    <MenuItem Command="{Binding DataContext.ToggleFavoriteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                             CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                        <MenuItem.Style>
                                            <Style TargetType="MenuItem">
                                                <Setter Property="Header" Value="⭐ Add to Favorites"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding PlacementTarget.SelectedItem.IsFavorite, RelativeSource={RelativeSource AncestorType=ContextMenu}}" Value="True">
                                                        <Setter Property="Header" Value="💔 Remove from Favorites"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </MenuItem.Style>
                                    </MenuItem>
                                </ContextMenu>
                            </DataGrid.ContextMenu>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="" 
                                                   Binding="{Binding IsFavorite, Converter={StaticResource BoolToStarConverter}}"
                                                   Width="50"
                                                   CanUserSort="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontSize" Value="18"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="Solution Name" 
                                                   Binding="{Binding Name}" 
                                                   Width="2.5*"
                                                   CanUserSort="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="FontSize" Value="14"/>
                                            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="Path" 
                                                   Binding="{Binding RelativePath}" 
                                                   Width="3*"
                                                   CanUserSort="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontFamily" Value="Consolas"/>
                                            <Setter Property="FontSize" Value="13"/>
                                            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="Modified" 
                                                   Binding="{Binding LastModifiedDisplay}" 
                                                   Width="1*"
                                                   CanUserSort="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="Size" 
                                                   Binding="{Binding FileSizeDisplay}" 
                                                   Width="100"
                                                   CanUserSort="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Empty State -->
                        <StackPanel HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   Visibility="{Binding FilteredSolutions.Count, Converter={StaticResource ZeroToVisibilityConverter}}">
                            <Viewbox Width="140" Height="140" Margin="0,0,0,32">
                                <Canvas Width="100" Height="100">
                                    <Ellipse Width="100" Height="100">
                                        <Ellipse.Fill>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#EDE7F6" Offset="0"/>
                                                <GradientStop Color="#F3E5F5" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <TextBlock Text="📁" FontSize="48" Canvas.Left="26" Canvas.Top="20"/>
                                </Canvas>
                            </Viewbox>
                            
                            <TextBlock Text="No solutions found" 
                                      FontSize="26" 
                                      FontWeight="SemiBold"
                                      Foreground="{StaticResource TextPrimaryBrush}"
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,12"/>
                            

                            <TextBlock HorizontalAlignment="Center" 
                                      FontSize="15"
                                      Foreground="{StaticResource TextSecondaryBrush}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="Try adjusting your search terms or clear the search"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Solutions.Count}" Value="0">
                                                <Setter Property="Text" Value="Click 'Add Repository' to get started"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3" Style="{StaticResource ModernStatusBarStyle}">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <Border Background="{StaticResource SelectionBrush}"
                            CornerRadius="6"
                            Padding="8,4"
                            Margin="0,0,12,0">
                        <TextBlock Text="💼" FontSize="14" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="{Binding StatusBarText}" 
                              VerticalAlignment="Center"
                              Foreground="{StaticResource TextPrimaryBrush}"/>
                </StackPanel>
            </StatusBarItem>
            
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <Border CornerRadius="12"
                            Padding="12,6"
                            Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#E8F5E9" Offset="0"/>
                                <GradientStop Color="#C8E6C9" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⏳" FontSize="13" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Scanning..." 
                                      FontWeight="SemiBold"
                                      FontSize="13"
                                      Foreground="{StaticResource SuccessBrush}"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
