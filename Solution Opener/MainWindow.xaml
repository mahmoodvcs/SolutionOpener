<Window x:Class="Solution_Opener.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Solution_Opener"
        mc:Ignorable="d"
        Title="💼 Solution Opener" 
        Height="700" 
        Width="1200"
        MinHeight="500"
        MinWidth="800"
        WindowStartupLocation="Manual"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    
    <Window.InputBindings>
        <KeyBinding Key="F" Modifiers="Ctrl" Command="ApplicationCommands.Find" />
        <KeyBinding Key="N" Modifiers="Ctrl" Command="{Binding AddRepositoryCommand}" />
        <KeyBinding Key="F5" Command="{Binding RefreshCurrentRepositoryCommand}" />
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <ToolBar Grid.Row="0">
            <Button Command="{Binding AddRepositoryCommand}" 
                    ToolTip="Add Repository (Ctrl+N)">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="➕" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Add Repository" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            
            <Separator Margin="8,4"/>
            
            <Button Command="{Binding RefreshCurrentRepositoryCommand}" 
                    IsEnabled="{Binding SelectedTab, Converter={StaticResource NotNullConverter}}"
                    ToolTip="Refresh Current Repository (F5)">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🔄" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Refresh" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </ToolBar>

        <!-- Search Bar -->
        <Border Grid.Row="1" 
                BorderThickness="0,0,0,1"
                Padding="20,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                          Text="🔍" 
                          FontSize="20"
                          VerticalAlignment="Center" 
                          Margin="0,0,12,0"/>
                
                <TextBox x:Name="SearchTextBox" 
                         Grid.Column="1" 
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         VerticalAlignment="Center"
                         PreviewKeyDown="SearchTextBox_PreviewKeyDown">
                    <TextBox.Resources>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                <VisualBrush.Visual>
                                                    <TextBlock Text="Search solutions by name or path... (Ctrl+F)" 
                                                             Foreground="Gray" 
                                                             FontSize="14"
                                                             Margin="12,0,0,0"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                
                <Button Grid.Column="2" 
                        Content="✕ Clear" 
                        Command="{Binding ClearSearchCommand}"
                        Margin="12,0,0,0"
                        IsEnabled="{Binding SearchText, Converter={StaticResource NotEmptyStringConverter}}"/>
            </Grid>
        </Border>

        <!-- Main Content - Tabs -->
        <TabControl Grid.Row="2" 
                    ItemsSource="{Binding RepositoryTabs}"
                    SelectedItem="{Binding SelectedTab}"
                    BorderThickness="0">
            
            <TabControl.ItemContainerStyle>
                <Style TargetType="TabItem">
                    <Setter Property="ContextMenu">
                        <Setter.Value>
                            <ContextMenu>
                                <MenuItem Header="🔄 Refresh Repository" 
                                         Command="{Binding DataContext.RefreshCurrentRepositoryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                         InputGestureText="F5"/>
                                <Separator/>
                                <MenuItem Header="🗑️ Remove Repository"
                                         Command="{Binding DataContext.RemoveRepositoryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                         CommandParameter="{Binding}"/>
                            </ContextMenu>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.ItemContainerStyle>
            
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" FontSize="14"/>
                </DataTemplate>
            </TabControl.ItemTemplate>
            
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <Grid>
                        <!-- Loading Overlay -->
                        <Border Background="#DD000000" 
                                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                                Panel.ZIndex="1000"
                                CornerRadius="8"
                                Margin="20">
                            <Border Background="White"
                                    CornerRadius="12"
                                    Padding="40"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="20" 
                                                    ShadowDepth="4" 
                                                    Opacity="0.3" 
                                                    Color="Black"/>
                                </Border.Effect>
                                <StackPanel>
                                    <TextBlock Text="⏳" 
                                              FontSize="48" 
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,16"/>
                                    <TextBlock Text="Scanning Repository..." 
                                              FontSize="18" 
                                              FontWeight="SemiBold"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding StatusText}" 
                                              FontSize="14"
                                              HorizontalAlignment="Center"/>
                                    <ProgressBar IsIndeterminate="True"
                                                Height="4"
                                                Margin="0,16,0,0"
                                                MinWidth="200"/>
                                </StackPanel>
                            </Border>
                        </Border>

                        <!-- Solutions List -->
                        <DataGrid ItemsSource="{Binding FilteredSolutions}"
                                  CanUserSortColumns="True"
                                  Margin="0"
                                  AutoGenerateColumns="False"
                                  CanUserResizeRows="False"
                                  SelectionMode="Single"
                                  SelectionUnit="FullRow"
                                  GridLinesVisibility="None"
                                  HeadersVisibility="Column"
                                  RowHeight="40">
                            
                            <DataGrid.InputBindings>
                                <MouseBinding Gesture="LeftDoubleClick" 
                                            Command="{Binding DataContext.OpenSolutionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}, Path=SelectedItem}"/>
                                <KeyBinding Key="Enter" 
                                          Command="{Binding DataContext.OpenSolutionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                          CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}, Path=SelectedItem}"/>
                            </DataGrid.InputBindings>

                            <DataGrid.Style>
                                <Style TargetType="DataGrid">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding FilteredSolutions.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.Style>

                            <DataGrid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="🚀 Open Solution" 
                                             Command="{Binding DataContext.OpenSolutionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                             CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                             FontWeight="SemiBold"/>
                                    <Separator/>
                                    <MenuItem Header="📁 Open in Explorer" 
                                             Command="{Binding DataContext.OpenInExplorerCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                             CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                    <MenuItem Header="📋 Copy Path" 
                                             Command="{Binding DataContext.CopyPathCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                             CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                    <Separator/>
                                    <MenuItem Command="{Binding DataContext.ToggleFavoriteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                             CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                        <MenuItem.Style>
                                            <Style TargetType="MenuItem">
                                                <Setter Property="Header" Value="⭐ Add to Favorites"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding PlacementTarget.SelectedItem.IsFavorite, RelativeSource={RelativeSource AncestorType=ContextMenu}}" Value="True">
                                                        <Setter Property="Header" Value="💔 Remove from Favorites"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </MenuItem.Style>
                                    </MenuItem>
                                </ContextMenu>
                            </DataGrid.ContextMenu>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="" 
                                                   Binding="{Binding IsFavorite, Converter={StaticResource BoolToStarConverter}}"
                                                   Width="40"
                                                   CanUserSort="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontSize" Value="16"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="Solution Name" 
                                                   Binding="{Binding Name}" 
                                                   Width="2.5*"
                                                   CanUserSort="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="Path" 
                                                   Binding="{Binding RelativePath}" 
                                                   Width="3*"
                                                   CanUserSort="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontFamily" Value="Consolas"/>
                                            <Setter Property="FontSize" Value="13"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="Modified" 
                                                   Binding="{Binding LastModifiedDisplay}" 
                                                   Width="1*"
                                                   CanUserSort="True"/>
                                
                                <DataGridTextColumn Header="Size" 
                                                   Binding="{Binding FileSizeDisplay}" 
                                                   Width="90"
                                                   CanUserSort="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>

                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Cursor" Value="Hand"/>
                                </Style>
                            </DataGrid.RowStyle>
                        </DataGrid>

                        <!-- Empty State -->
                        <StackPanel HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   Visibility="{Binding FilteredSolutions.Count, Converter={StaticResource ZeroToVisibilityConverter}}">
                            <Viewbox Width="120" Height="120" Margin="0,0,0,24">
                                <Canvas Width="100" Height="100">
                                    <Ellipse Width="100" Height="100" Fill="LightGray"/>
                                    <TextBlock Text="📁" FontSize="48" Canvas.Left="26" Canvas.Top="20"/>
                                </Canvas>
                            </Viewbox>
                            
                            <TextBlock Text="No solutions found" 
                                      FontSize="24" 
                                      FontWeight="SemiBold"
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,8"/>
                            
                            <TextBlock HorizontalAlignment="Center" 
                                      FontSize="14">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="Try adjusting your search terms or clear the search"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Solutions.Count}" Value="0">
                                                <Setter Property="Text" Value="Click 'Add Repository' to get started"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="💼" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding StatusBarText}" VerticalAlignment="Center"/>
                </StackPanel>
            </StatusBarItem>
            
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <Border CornerRadius="10"
                            Padding="8,4"
                            Background="LightBlue"
                            Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⏳" FontSize="12" Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Scanning..." 
                                      FontWeight="SemiBold"
                                      FontSize="12"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
